<script>
    document.addEventListener('DOMContentLoaded', function () {
        const checkedRadio = document.querySelector('.card-radio-input-delivery:checked');
        if (checkedRadio) {
            const initialShippingCost = parseFloat(checkedRadio.value);
            if (!isNaN(initialShippingCost)) {
                updateTotalAmount(initialShippingCost);
                document.getElementById('shippingCost').value = initialShippingCost;
                document.getElementById('shippingCost').innerText = initialShippingCost.toLocaleString('vi-VN') + ' VNĐ';
            }
        }
    });

    document.querySelectorAll('.card-radio-input-delivery').forEach(radio => {
        radio.addEventListener('change', function () {
            if (this.checked) {
                const shippingCost = parseFloat(this.value);
                if (!isNaN(shippingCost)) {
                    updateTotalAmount(shippingCost);
                    // Định dạng giá trị và hiển thị
                    document.getElementById('shippingCost').value = shippingCost;
                    document.getElementById('shippingCost').innerText = shippingCost.toLocaleString('vi-VN') + ' VNĐ';
                }
            }
        });
    });

    function updateTotalAmount(shippingCost) {
        $.ajax({
            url: '@Url.Action("UpdateTotalAmount", "Payment")',
            type: 'POST',
            data: { shippingCost: shippingCost },
            success: function (response) {
                // Định dạng tổng giá trị
                $('#totalAmount').text(response.totalAmount.toLocaleString('vi-VN') + ' VNĐ');
            },
            error: function (error) {
                console.log('Có lỗi khi tính toán tổng giá trị.', error);
            }
        });
    }
</script>
