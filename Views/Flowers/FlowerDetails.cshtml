@{
    ViewData["Title"] = "FlowerDetails";
}
@model Flowers
<style>
    .max-height-flower {
        height: 700px;
        object-fit: cover;
    }
</style>
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="max-height-flower card-img-top mb-5 mb-md-0" src="@Model.HinhAnh" alt="Lỗi" />
            </div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.MaHoa</div>
                <h1 class="display-5 fw-bolder">@Model.TenHoa</h1>
                <div class="fs-5 mb-5">
                    <span class="">@Model.GiaBan VNĐ</span>
                </div>
                <p class="lead">@Model.MoTa</p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1"
                        style="max-width: 3rem" />
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="fa-solid fa-cart-shopping"></i>
                        Add to cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
