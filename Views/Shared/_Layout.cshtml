<script>
    window.onload = function () {
        var lastShownTime = localStorage.getItem('notificationShownTime');
        var currentTime = new Date().getTime();

        if (!lastShownTime || currentTime - lastShownTime > 45 * 60 * 1000) {
            var notification = document.getElementById('notification');

            setTimeout(function () {
                notification.classList.add('show');
            }, 1000); 

            localStorage.setItem('notificationShownTime', currentTime);


            setTimeout(function () {
                notification.classList.remove('show');
            }, 7000);
        }
    };


