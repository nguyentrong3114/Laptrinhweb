    <script>
        $(document).ready(function () {
            // Activate tooltip
            $('[data-bs-toggle="tooltip"]').tooltip();

            $('#selectAll').click(function () {
                if ($(this).prop('checked')) {
                    $('input[name="selectedItems"]').prop('checked', true);
                }
                else {
                    $('input[name="selectedItems"]').prop('checked', false);
                }
            });

            $('input[name="selectedItems"]').click(function () {
                if (!$(this).prop('checked')) {
                    $('#selectAll').prop('checked', false);
                }
            });

            $('#deleteSelectedBtn').click(function () {
                var selected = [];
                $('input[name="selectedItems"]:checked').each(function () {
                    selected.push($(this).val());
                });

                if (selected.length > 0) {
                    $('#deleteSelectedIds').val(JSON.stringify(selected));
                    $('#deleteSelectedModal').modal('show');
                }
                else {
                    alert('Vui lòng chọn ít nhất một dòng để xóa.');
                }
            });

            $('#editUserModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Lấy đối tượng đã click (icon Edit)
                var userId = button.data('id'); // Lấy ID của user từ data-id

                $.ajax({
                    url: '/Admin/Users/Edit/' + userId, // URL của action Edit
                    type: 'GET',
                    success: function (data) {
                        console.log(data);
                        // Điền dữ liệu vào form
                        $('#MaUser').val(data.maUser);
                        $('#HoTen').val(data.hoTen);
                        $('#Email').val(data.email);
                        $('#TenTaiKhoan').val(data.tenTaiKhoan);
                        $('#SoDienThoai').val(data.soDienThoai);
                        $('#DiaChi').val(data.diaChi);
                        $('#GioiTinh').val(data.gioiTinh);
                        $('#NgaySinh').val(data.ngaySinh);
                        //$('#NgaySinh').val(data.ngaySinh ? new Date(data.ngaySinh).toISOString().split('T')[0] : '');
                        $('#VaiTro').val(data.vaiTro);
                        $('#NgayDangKy').val(data.ngayDangKy);
                        //$('#NgayDangKy').val(data.ngayDangKy ? new Date(data.ngayDangKy).toISOString().split('T')[0] :
                        $('#IdFacebook').val(data.idFacebook);
                        $('#IdGoogle').val(data.idGoogle);
                    },

                    error: function () {
                        alert('Không thể tải dữ liệu cho người dùng.');
                    }
                });
            });

            $('#deleteUserModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Lấy đối tượng đã click (icon Delete)
                var userId = button.data('id'); // Lấy ID của người dùng từ data-id
                $('#deleteUserId').val(userId); // Gán ID vào input hidden trong form
            });
        });
    </script>
