                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&sortOrder=@ViewBag.SortOrder&keyword=@ViewBag.Keyword">Next</a>
                    </li>
                }
            </ul>
