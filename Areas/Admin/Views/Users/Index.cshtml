                </table>
            </div>
        </div>
        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&sortOrder=@ViewBag.SortOrder&keyword=@ViewBag.Keyword">Prev</a>
                    </li>
                }
                @*
                <!-- Page 1 and Page 2 -->
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "active" : "")">
                <a class="page-link" href="?page=1&sortOrder=@ViewBag.SortOrder">1</a>
                </li>
                @if (ViewBag.TotalPages >= 2)
                {
                <li class="page-item @(ViewBag.CurrentPage == 2 ? "active" : "")">
                <a class="page-link" href="?page=2&sortOrder=@ViewBag.SortOrder">2</a>
                </li>
                }

                <!-- Dots if current page is far from the first two pages -->
                @if (ViewBag.CurrentPage > 4)
                {
                <li class="page-item disabled">
                <span class="page-link">...</span>
                </li>
                }

                <!-- Middle Pages (up to 3 pages around the current page) -->
                @for (int i = ViewBag.CurrentPage - 1; i <= ViewBag.CurrentPage + 1; i++)
                {
                if (i > 2 && i < ViewBag.TotalPages - 1) // Avoid duplication with first two and last two pages
                {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="?page=@i&sortOrder=@ViewBag.SortOrder">@i</a>
                </li>
                }
                }

                <!-- Dots if current page is far from the last two pages -->
                @if (ViewBag.CurrentPage < ViewBag.TotalPages - 3)
                {
                <li class="page-item disabled">
                <span class="page-link">...</span>
                </li>
                }

                <!-- Last two pages -->
                @if (ViewBag.TotalPages > 2)
                {
                <li class="page-item @(ViewBag.CurrentPage == (ViewBag.TotalPages - 1) ? "active" : "")">
                <a class="page-link" href="?page=@(ViewBag.TotalPages - 1)&sortOrder=@ViewBag.SortOrder">@((ViewBag.TotalPages - 1))</a>
                </li>
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "active" : "")">
                <a class="page-link" href="?page=@ViewBag.TotalPages&sortOrder=@ViewBag.SortOrder">@ViewBag.TotalPages</a>
                </li>
                }
