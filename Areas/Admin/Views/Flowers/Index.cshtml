        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form id="editFlowerForm" asp-action="Edit" asp-controller="Flowers" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Flower</h4>
                        <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="MaHoa">Mã hoa</label>
                            <input type="text" id="MaHoa" name="flw.MaHoa" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label for="TenHoa">Tên hoa</label>
                            <input type="text" id="TenHoa" name="flw.TenHoa" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="MaDanhMuc">Danh mục</label>
                            <select id="MaDanhMuc" name="flw.MaDanhMuc" class="form-control">
                                <option value="">Chọn danh mục</option>
                                @foreach (var category in ViewBag.FlowerCategory)
                                {
                                    <option value="@category.MaDanhMuc">@category.TenDanhMuc</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="MaHoaTuoi">Loại hoa</label>
                            <select id="MaHoaTuoi" name="flw.MaHoaTuoi" class="form-control">
                                <option value="">Chọn loại hoa</option>
                                @foreach (var type in ViewBag.FlowerType)
                                {
                                    <option value="@type.MaHoaTuoi">@type.TenHoaTuoi</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="GiaBan">Giá bán</label>
                            <input type="text" id="GiaBan" name="flw.GiaBan" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="MoTa">Mô tả</label>
                            <textarea id="MoTa" name="flw.MoTa" class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="HinhAnh">Hình ảnh</label>
                            <small>*Để trống nếu bạn không muốn đổi ảnh.</small>
                            <input type="hidden" id="CurrentHinhAnh" name="CurrentHinhAnh" />
                            <input type="file" id="HinhAnhMoi" name="HinhAnhMoi" class="form-control" />
