        }

        .pagination {
            display: flex;
            justify-content: center;
            padding-left: 0;
            list-style: none;
        }

        .page-link {
            padding: 10px 15px;
            margin: 0 5px;
            border: 1px solid #ddd;
            color: #007bff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
        }

            .page-link:hover {
                background-color: #f8f9fa;
                border-color: #007bff;
                color: #0056b3;
            }

            /* Active page */
            .page-link.active {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

                .page-link.active:hover {
                    background-color: #0056b3;
                    border-color: #0056b3;
                }

        .hint-text {
            float: left;
            margin-top: 10px;
            font-size: 13px;
        }
        /* Custom checkbox */
        .custom-checkbox {
            position: relative;
        }

            .custom-checkbox input[type="checkbox"] {
                opacity: 0;
                position: absolute;
                margin: 5px 0 0 3px;
                z-index: 9;
            }

            .custom-checkbox label:before {
                width: 18px;
                height: 18px;
            }

            .custom-checkbox label:before {
                content: '';
                margin-right: 10px;
                display: inline-block;
                vertical-align: text-top;
                background: white;
                border: 1px solid #bbb;
                border-radius: 2px;
                box-sizing: border-box;
                z-index: 2;
            }

            .custom-checkbox input[type="checkbox"]:checked + label:after {
                content: '';
                position: absolute;
                left: 6px;
                top: 3px;
                width: 6px;
                height: 11px;
                border: solid #000;
                border-width: 0 3px 3px 0;
                transform: inherit;
                z-index: 3;
                transform: rotateZ(45deg);
            }

            .custom-checkbox input[type="checkbox"]:checked + label:before {
                border-color: #03A9F4;
                background: #03A9F4;
            }

            .custom-checkbox input[type="checkbox"]:checked + label:after {
                border-color: #fff;
            }

            .custom-checkbox input[type="checkbox"]:disabled + label:before {
                color: #b8b8b8;
                cursor: auto;
                box-shadow: none;
                background: #ddd;
            }
        /* Modal styles */
        .modal .modal-header, .modal .modal-body, .modal .modal-footer {
            padding: 20px 30px;
        }

        .modal .modal-content {
            border-radius: 3px;
            font-size: 14px;
        }

        .modal .modal-footer {
            background: #ecf0f1;
            border-radius: 0 0 3px 3px;
        }

        .modal .modal-title {
            display: inline-block;
        }

        .modal .form-control {
            border-radius: 2px;
            box-shadow: none;
            border-color: #dddddd;
        }

        .modal textarea.form-control {
            resize: vertical;
        }

        .modal .btn {
            border-radius: 2px;
            min-width: 100px;
        }

        .modal form label {
            font-weight: normal;
        }

        .modal-content {
            border-radius: 35px;
        }
        /*Validation*/
        .field-validation-error {
            color: red;
        }
    </style>
    <script>
        $(document).ready(function () {
            // Activate tooltip
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Select/Deselect checkboxes
            // var checkbox = $('table tbody input[type="checkbox"]');
            // $("#selectAll").click(function(){
            // 	if(this.checked){
            // 		checkbox.each(function(){
            // 			this.checked = true;
            // 		});
            // 	} else{
            // 		checkbox.each(function(){
            // 			this.checked = false;
            // 		});
            // 	}
            // });
            // checkbox.click(function(){
            // 	if(!this.checked){
            // 		$("#selectAll").prop("checked", false);
            // 	}
            // });

            $('#selectAll').click(function () {
                if ($(this).prop('checked')) {
                    $('input[name="selectedItems"]').prop('checked', true);
                }
                else {
                    $('input[name="selectedItems"]').prop('checked', false);
                }
            });

            $('input[name="selectedItems"]').click(function () {
                if (!$(this).prop('checked')) {
                    $('#selectAll').prop('checked', false);
                }
            });

            $('#deleteSelectedBtn').click(function () {
                var selected = [];
                $('input[name="selectedItems"]:checked').each(function () {
                    selected.push($(this).val());
                });

                if (selected.length > 0) {
                    $('#deleteSelectedIds').val(JSON.stringify(selected));
                    $('#deleteSelectedModal').modal('show');
                }
                else {
                    alert('Vui lòng chọn ít nhất một sản phẩm để xóa.');
                }
            });

            $('#editFlowerModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Lấy đối tượng đã click (icon Edit)
                var flowerId = button.data('id'); // Lấy ID của hoa từ data-id

                // Gọi AJAX để lấy dữ liệu cho flowerId và cập nhật form
                $.ajax({
                    url: '/Admin/Flowers/Edit/' + flowerId, // URL của action Edit
                    type: 'GET',
                    success: function (data) {
                        console.log(data);
                        // Điền dữ liệu vào form
                        $('#MaHoa').val(data.maHoa);
                        $('#TenHoa').val(data.tenHoa);
                        $('#MaDanhMuc').val(data.maDanhMuc);
                        $('#MaHoaTuoi').val(data.maHoaTuoi);
                        $('#GiaBan').val(data.giaBan);
                        $('#MoTa').val(data.moTa);
                        $('#CurrentHinhAnh').val(data.hinhAnh);

                        if (data.hinhAnh && data.hinhAnh !== "") {
                            $('#imagePreview').attr('src', data.hinhAnh).show();
                        }
                        else {
                            $('#imagePreview').hide();
                        }
                    },

                    error: function () {
                        alert('Không thể tải dữ liệu cho hoa.');
                    }
                });
            });

            $('#deleteFlowerModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Lấy đối tượng đã click (icon Delete)
                var flowerId = button.data('id'); // Lấy ID của hoa từ data-id
                $('#deleteFlowerId').val(flowerId); // Gán ID vào input hidden trong form
            });
        });
    </script>
</head>
<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <h2>Quản lý <b>Hoa</b></h2>
                            </div>
                            <div class="col-sm-6 d-flex flex-column align-items-end">
                                <form method="get" class="form-inline mb-2" style="width: 100%;">
                                    <div class="input-group">
                                        <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm hoa..."
                                               value="@Context.Request.Query["keyword"]" />
                                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                                    </div>
                                </form>
                                <a href="#addFlowerModal" class="btn btn-success mb-2" data-bs-toggle="modal" data-bs-target="#addFlowerModal">
                                    <i class="material-icons">&#xE147;</i>
                                    <span>Thêm mới hoa</span>
                                </a>
                                <a href="javascript:void(0);" id="deleteSelectedBtn" class="btn btn-danger">
                                    <i class="material-icons">&#xE15C;</i>
                                    <span>Xoá đã chọn</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="selectAll">
                                    <label for="selectAll"></label>
                                </span>
                            </th>
                            <th>Ảnh</th>
                            <th>
                                <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage, sortOrder = ViewBag.SortOrder == "mahoa_asc" ? "mahoa_desc" : "mahoa_asc", keyword = ViewBag.Keyword })">Mã hoa</a>
                                @if (ViewBag.SortOrder == "mahoa_asc")
                                {
                                    <span>&#9650;</span>
                                }
                                else if (ViewBag.SortOrder == "mahoa_desc")
                                {
                                    <span>&#9660;</span>
                                }
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage, sortOrder = ViewBag.SortOrder == "tenhoa_asc" ? "tenhoa_desc" : "tenhoa_asc", keyword = ViewBag.Keyword })">Tên hoa</a>
                                @if (ViewBag.SortOrder == "tenhoa_asc")
                                {
                                    <span>&#9650;</span>
                                }
                                else if (ViewBag.SortOrder == "tenhoa_desc")
                                {
                                    <span>&#9660;</span>
                                }
                            </th>
                            <th>Danh mục</th>
                            <th>Loại hoa</th>
                            <th>Mô tả</th>
                            <th>Giá bán</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FlowerList)
                        {
                            <tr>
                                <td>
                                    <span class="custom-checkbox">
                                        <input type="checkbox" id="checkbox@item.MaHoa" name="selectedItems" value="@item.MaHoa">
                                        <label for="checkbox@item.MaHoa"></label>
                                    </span>
                                </td>
                                <td><img src="@item.HinhAnh" class="img-fluid" style="max-height: 400px;"></td>
                                <td>@item.MaHoa</td>
                                <td>@item.TenHoa</td>
                                <td>@item.TenDanhMuc</td>
                                <td>@item.TenHoaTuoi</td>
                                <td>@item.MoTa</td>
                                <td>@item.GiaBan</td>
                                <td>
                                    <a href="#editFlowerModal" class="edit" data-bs-toggle="modal" data-bs-target="#editFlowerModal" data-id="@item.MaHoa">
                                        <i class="material-icons" data-bs-toggle="tooltip" title="Sửa">&#xE254;</i>
                                    </a>
                                    <a href="#deleteFlowerModal" class="delete" data-bs-toggle="modal" data-id="@item.MaHoa">
                                        <i class="material-icons" data-bs-toggle="tooltip" title="Xoá">&#xE872;</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Nút Previous -->
                @if (ViewBag.Pagination.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.Pagination.CurrentPage - 1)&sortOrder=@ViewBag.SortOrder&keyword=@ViewBag.Keyword">Prev</a>
                    </li>
                }

                <!-- Các nút số trang -->
                @foreach (var pageNumber in ViewBag.Pagination.PagesToDisplay)
                {
                    if (pageNumber == -1) // Dấu "..."
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item @(ViewBag.Pagination.CurrentPage == pageNumber ? "active" : "")">
                            <a class="page-link" href="?page=@pageNumber&sortOrder=@ViewBag.SortOrder&keyword=@ViewBag.Keyword">@pageNumber</a>
                        </li>
                    }
                }

                <!-- Nút Next -->
                @if (ViewBag.Pagination.CurrentPage < ViewBag.Pagination.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.Pagination.CurrentPage + 1)&sortOrder=@ViewBag.SortOrder&keyword=@ViewBag.Keyword">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
    <!-- Create Modal HTML -->
    <div id="addFlowerModal" class="modal fade">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form asp-action="Create" asp-controller="Flowers" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h4 class="modal-title">Add Flower</h4>
                        <button type="button" class="close" data-bs-dismiss="modal">×</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="MaHoa">Mã hoa</label>
                            <input asp-for="flw.MaHoa" class="form-control" />
                            @Html.ValidationMessageFor(row => row.flw.MaHoa)
                        </div>
                        <div class="form-group">
                            <label for="TenHoa">Tên hoa</label>
                            <input asp-for="flw.TenHoa" class="form-control" />
                            @Html.ValidationMessageFor(row => row.flw.TenHoa)
                        </div>
                        <div class="form-group">
                            <label for="MaDanhMuc">Danh mục</label>
                            <select asp-for="flw.MaDanhMuc" class="form-control">
                                <option value="">Chọn danh mục</option>
                                @foreach (var category in ViewBag.FlowerCategory)
                                {
                                    <option value="@category.MaDanhMuc">@category.TenDanhMuc</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(row => row.flw.MaDanhMuc)
                        </div>
                        <div class="form-group">
                            <label for="MaHoaTuoi">Loại hoa</label>
                            <select asp-for="flw.MaHoaTuoi" class="form-control">
                                <option value="">Chọn loại hoa</option>
                                @foreach (var type in ViewBag.FlowerType)
                                {
                                    <option value="@type.MaHoaTuoi">@type.TenHoaTuoi</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(row => row.flw.MaHoaTuoi)
                        </div>
                        <div class="form-group">
                            <label for="GiaBan">Giá bán</label>
                            <input asp-for="flw.GiaBan" class="form-control" />
                            @Html.ValidationMessageFor(row => row.flw.GiaBan)
                        </div>
                        <div class="form-group">
                            <label for="MoTa">Mô tả</label>
                            <textarea asp-for="flw.MoTa" class="form-control" rows="5"></textarea>
                            @Html.ValidationMessageFor(row => row.flw.MoTa)
                        </div>
                        <div class="form-group">
                            <label for="HinhAnh">Hình ảnh</label>
                            <input type="file" name="HinhAnh" class="form-control" />
                            @Html.ValidationMessageFor(row => row.flw.HinhAnh)
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-bs-dismiss="modal">Huỷ</button>
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Edit Modal HTML -->
